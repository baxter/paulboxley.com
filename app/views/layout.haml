!!!
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }
    %title
      = @title + ' &mdash; ' unless @title.nil?
      = Site[:title]
    %link{ :type => "application/atom+xml", :rel => "alternate", :href => Site[:base_url] + "blog/feed.atom" }
    %link{ :type => "image/png", :rel => "icon", :href => "/favicon.png" }
    %script{ :src => "http://use.typekit.com/wri1cev.js", :type => "text/javascript" }
    %script{ :type => "text/javascript" }
      try{Typekit.load();}catch(e){}
    %link{ :type => "text/css", :rel => "stylesheet", :href => "/style.css" }
    %script{ :src => "http://static.paulboxley.com/jquery.js", :type => "text/javascript" }
    %script{ :src => "http://static.paulboxley.com/jquery.masonry.js", :type => "text/javascript" }
    /[if lte IE 8]
      %script{ :src => "http://static.paulboxley.com/html5.js", :type => "text/javascript" }
    %script
      $(window).load(function(){
      $('#wrapper').masonry({
      columnWidth: 300,
      itemSelector: 'article',
      animate: true
      });
      });
  %body
    %header
      %h1
        = Site[:title]
      %nav
        = haml :navigation, :layout => false
    #wrapper
      = yield