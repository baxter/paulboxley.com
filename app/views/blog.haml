-@posts.each do |post|
  %article{ :class => post.external? ? 'external' : 'internal' }
    %header
      %h2
        %span.permalink
          %a{ :href => post.permalink, :title => "Permalink to '#{post.title}'" } &nbsp;
        - if post.external?           
          %a{ :href => post.url }
            = post.title
        - else
          = post.title
      %span.posted
        Posted
        = post.posted.strftime "%Y-%m-%d"
        @
        = post.posted.strftime "%H:%M"
        UTC
    ~ post.html