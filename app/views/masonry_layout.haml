!!!
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }
    %title
      = @title + ' &mdash; ' unless @title.nil?
      = Site[:title]
    // %link{ :type => "text/css", :rel => "stylesheet", :href => "/style.css" }
    %link{ :type => "application/atom+xml", :rel => "alternate", :href => Site[:base_url] + "blog/feed.atom" }
    %link{ :type => "image/png", :rel => "icon", :href => "/favicon.png" }
    // %script{ :src => "http://use.typekit.com/wri1cev.js", :type => "text/javascript" }
    // %script{ :type => "text/javascript" }
    //   try{Typekit.load();}catch(e){}
    %link{ :type => "text/css", :rel => "stylesheet", :href => "/masonry.css" }
    %script{ :src => "http://static.paulboxley.com/jquery.js", :type => "text/javascript" }
    %script{ :src => "http://static.paulboxley.com/jquery.masonry.js", :type => "text/javascript" }
    /[if lte IE 8]
      %script{ :src => "html5.js", :type => "text/javascript" }
    %script
      $(window).load(function(){
      $('#wrapper').masonry({
      columnWidth: 300,
      itemSelector: 'article',
      animate: true
      });
      });
  %body
    %h1
      Paul Boxley
    #wrapper
      -@posts.each do |post|
        %article{ :class => post.external? ? 'external' : 'internal' }
          %h2
            - if post.external?           
              %a{ :href => post.url }
                = post.title
            - else
              = post.title
          ~ post.html          
          %span.permalink
            %a{ :href => post.permalink, :title => "Permanent link to '#{post.title}'" }
              Permalink